<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <wizard
            id="com.dhcc.ms.plugin.datatype.newWizards.datatype"
            class="com.dhcc.ms.plugin.datatype.DatatypeWizard"
            icon="icons/sample.png"
            name="New Datatype Class">
      </wizard>
   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
      <page
            id="com.dhcc.ms.plugin.datatype.preference.datatype"
            class="com.dhcc.ms.plugin.datatype.preferences.ReaderPreferencePage"
            name="Datatype">
      </page>
      <page
            id="com.dhcc.ms.plugin.datatype.preference.downloader"
            category="com.dhcc.ms.plugin.datatype.preference.datatype"
            class="com.dhcc.ms.plugin.datatype.preferences.DownloaderPreferencePage"
            name="Downloader">
      </page>
   </extension>
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.dhcc.ms.plugin.datatype.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   
   <extension point="org.eclipse.ui.commands">
      <category
            id="com.dhcc.ms.plugin.datatype.command.category.Datatype"
            name="Datatype">
      </category>
      <command
            id="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
            categoryId="com.dhcc.ms.plugin.datatype.command.category.Datatype"
            name="DatatypeWizard">
      </command>
   </extension>
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="com.dhcc.ms.plugin.datatype.DatatypeWizardHandler"
            commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard">
      </handler>
   </extension>
   <extension point="org.eclipse.ui.bindings">
      <key commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
           contextId="org.eclipse.ui.contexts.window"
           sequence="M1+6"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.dhcc.ms.plugin.datatype.menu.Datatype"
               label="Datatype"
               mnemonic="D">
            <command
                  commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
                  id="com.dhcc.ms.plugin.datatype.menu.NewClass"
                  label="New Class"
                  mnemonic="N"
                  style="push">
                  <visibleWhen checkEnabled="false">
                        <with variable="selection">
                              <count value="1">
                              </count>
                              <iterate operator="and" ifEmpty="false">
	                              <adapt type="org.eclipse.core.resources.IResource">
	                              </adapt>
                              </iterate>
                  	    </with>
                  </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.dhcc.ms.plugin.datatype.toolbar.Datatype"
               label="Datatype">
            <command
                  commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
                  icon="icons/sample.png"
                  id="com.dhcc.ms.plugin.datatype.toolbar.NewClass"
                  label="New Class"
                  style="push">
                  <visibleWhen  checkEnabled="false">
                        <with variable="selection">
                              <count value="1">
                              </count>
                              <iterate operator="and" ifEmpty="false">
	                              <adapt type="org.eclipse.core.resources.IResource">
	                              </adapt>
                              </iterate>
                  	    </with>
                  </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
